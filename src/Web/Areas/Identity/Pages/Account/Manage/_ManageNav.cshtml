@using Enflorarte.CRM.Infrastructure.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "active" : null)"
           id="profile" asp-page="./Index"
           style="background-color: @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "#FBB6CE" : "transparent");
                  color: @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "white" : "#333");"
           onmouseover="this.style.color='#000000'; this.style.fontWeight='bold';"
           onmouseout="this.style.color='@(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "white" : "#333")'; this.style.fontWeight='normal';">
            Perfil
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "active" : null)"
           id="change-password" asp-page="./ChangePassword"
           style="background-color: @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "#FBB6CE" : "transparent");
                  color: @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "white" : "#333");"
           onmouseover="this.style.color='#000000'; this.style.fontWeight='bold';"
           onmouseout="this.style.color='@(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "white" : "#333")'; this.style.fontWeight='normal';">
            Contrase√±a
        </a>
    </li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item">
            <a id="external-login" class="nav-link @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "active" : null)"
               asp-page="./ExternalLogins"
               style="background-color: @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "#FBB6CE" : "transparent");
                      color: @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "white" : "#333");"
               onmouseover="this.style.color='#000000'; this.style.fontWeight='bold';"
               onmouseout="this.style.color='@(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "white" : "#333")'; this.style.fontWeight='normal';">
                External logins
            </a>
        </li>
    }
</ul>
